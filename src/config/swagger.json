{
  "swagger": "2.0",
  "info": {
    "title": "E-Commerce API",
    "description": "Manual Swagger documentation",
    "version": "1.0.0"
  },
  "host": "",
  "basePath": "/api",
  "tags": [
    {
      "name": "Auth",
      "description": "User authentication endpoints"
    },
    {
      "name": "Categories",
      "description": "Category management"
    },
    {
      "name": "Products",
      "description": "Product management"
    },
    {
      "name": "Cart",
      "description": "Cart operations"
    },
    {
      "name": "Orders",
      "description": "Order processing"
    }
  ],
  "schemes": ["https", "http"],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Enter: Bearer <token>"
    }
  },
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User Signup",
        "description": "Register a new user account.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "John Doe"
                },
                "email": {
                  "type": "string",
                  "example": "john@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "strongpass"
                },
                "role": {
                  "type": "string",
                  "example": "admin or customer"
                }
              },
              "required": ["name", "email", "password"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Signup successful"
          },
          "400": {
            "description": "Bad Request"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User Login",
        "description": "Log in and receive a JWT token.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "john@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "strongpass"
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/categories/": {
      "post": {
        "tags": ["Categories"],
        "summary": "Create category",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Electronics"
                },
                "description": {
                  "type": "string",
                  "example": "Devices & gadgets"
                }
              },
              "required": ["name"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Category created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      },
      "get": {
        "tags": ["Categories"],
        "summary": "List all categories",
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Fetched categories"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/categories/{id}": {
      "put": {
        "tags": ["Categories"],
        "summary": "Update category",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Category ID"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Mobiles"
                },
                "description": {
                  "type": "string",
                  "example": "Phone devices"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      },
      "delete": {
        "tags": ["Categories"],
        "summary": "Delete category",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Category ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/products/": {
      "post": {
        "tags": ["Products"],
        "summary": "Create product",
        "description": "Create a new product with optional image as base64 or URL",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "product",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "iPhone 16" },
                "description": { "type": "string", "example": "Latest model" },
                "price": { "type": "number", "example": 999 },
                "stock": { "type": "number", "example": 10 },
                "categoryId": { "type": "number", "example": 1 },
                "image": {
                  "type": "string",
                  "description": "Optional image as base64 string or URL",
                  "example": "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAA..."
                }
              },
              "required": ["name", "price", "stock", "categoryId"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "422": { "description": "Unprocessable Entity" }
        },
        "security": [{ "BearerAuth": [] }]
      },

      "get": {
        "tags": ["Products"],
        "summary": "List products",
        "description": "",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "pageSize",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "minPrice",
            "in": "query",
            "type": "number"
          },
          {
            "name": "maxPrice",
            "in": "query",
            "type": "number"
          },
          {
            "name": "categoryId",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "search",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/products/{id}": {
      "put": {
        "tags": ["Products"],
        "summary": "Update product",
        "description": "Update a product. Optional image can be provided as base64 string or URL.",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Product ID to update"
          },
          {
            "name": "product",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "iPhone Updated" },
                "price": { "type": "number", "example": 950 },
                "stock": { "type": "number", "example": 8 },
                "categoryId": { "type": "number", "example": 1 },
                "description": { "type": "string", "example": "Updated spec" },
                "image": {
                  "type": "string",
                  "description": "Optional image as base64 string or URL",
                  "example": "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAA..."
                }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Updated" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" }
        },
        "security": [{ "BearerAuth": [] }]
      },

      "delete": {
        "tags": ["Products"],
        "summary": "Delete product",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/cart/": {
      "post": {
        "tags": ["Cart"],
        "summary": "Add item to cart",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "productId": {
                  "type": "number",
                  "example": 1
                },
                "quantity": {
                  "type": "number",
                  "example": 2
                }
              },
              "required": ["productId", "quantity"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Added to cart"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      },
      "get": {
        "tags": ["Cart"],
        "summary": "Get user cart",
        "description": "",
        "responses": {
          "200": {
            "description": "Cart fetched"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/cart/{id}": {
      "delete": {
        "tags": ["Cart"],
        "summary": "Remove cart item",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Removed"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/orders/": {
      "post": {
        "tags": ["Orders"],
        "summary": "Place order from cart",
        "description": "",
        "responses": {
          "201": {
            "description": "Order placed"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "get": {
        "tags": ["Orders"],
        "summary": "Get user/admin orders",
        "description": "",
        "responses": {
          "200": {
            "description": "Fetched orders"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "autoHeaders": false,
  "autoQuery": false,
  "autoBody": false
}
